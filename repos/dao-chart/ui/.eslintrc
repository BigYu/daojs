{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true
  },
  "extends": "airbnb",
  "plugins": [
    "immutable"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prop-types": 1,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.stories.js",
          "**/jest.setup.js"
        ]
      }
    ],
    "import/prefer-default-export": 0,
    "linebreak-style": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "immutable/no-let": "error",
    "immutable/no-mutation": "error"
  }
}
